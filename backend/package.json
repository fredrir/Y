{
  "name": "nodejs-typescript-express-apollo-graphql-starter",
  "version": "1.0.0",
  "description": "NodeJS Apollo server with Typescript, express and GraphQL",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/index.ts",
    "build": "tsc -p . && ncp src/schema dist/schema",
    "start:dev": "nodemon src/index.ts --exec ts-node -r dotenv/config",
    "build:dev": "tsc && node dist/index.ts"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "graphql",
    "apollo",
    "express"
  ],
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "4.17.17",
    "@types/graphql": "14.2.3",
    "@types/graphql-depth-limit": "1.1.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "22.8.6",
    "graphql-depth-limit": "1.1.0",
    "nodemon": "^3.1.7",
    "ts-node": "10.9.2",
    "typescript": "5.6.3"
  },
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "@graphql-tools/graphql-file-loader": "^8.0.2",
    "@graphql-tools/load": "^8.0.3",
    "@graphql-tools/schema": "^10.0.7",
    "@types/mongoose": "^5.11.96",
    "apollo-server-errors": "^3.3.1",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "graphql": "^16.9.0",
    "http": "0.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.3",
    "ncp": "2.0.0"
  }
}
