{
  "name": "nodejs-typescript-express-apollo-graphql-starter",
  "version": "1.0.0",
  "description": "NodeJS Apollo server with Typescript, express and GraphQL",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/index.ts",
    "build": "tsc -p . && ncp src/schema dist/schema",
    "start:dev": "nodemon src/index.ts --exec ts-node -r dotenv/config",
    "build:dev": "tsc && node dist/index.ts"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "graphql",
    "apollo",
    "express"
  ],
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "0.0.36",
    "@types/express": "4.16.1",
    "@types/graphql": "14.0.7",
    "@types/graphql-depth-limit": "1.1.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "11.9.4",
    "graphql-depth-limit": "1.1.0",
    "graphql-import": "0.7.1",
    "graphql-import-node": "0.0.1",
    "nodemon": "^3.1.7",
    "ts-node": "8.0.2",
    "typescript": "3.3.3"
  },
  "dependencies": {
    "@types/mongoose": "^5.11.97",
    "apollo-server-express": "2.14.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "graphql": "14.5.8",
    "http": "0.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.3",
    "ncp": "2.0.0"
  }
}
